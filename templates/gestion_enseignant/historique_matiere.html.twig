{# historique_matiere.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Historique des matières{% endblock %}

{% block body %}
    <h1>Historique des matières de {{ enseignant.nom }}</h1>

    <ul>
    {% for matiere in matieres %}
        <li>{{ matiere.designation }}</li>
    {% else %}
        <li>Aucune matière n'a été assignée à cet enseignant.</li>
    {% endfor %}
    </ul>

    <a href="{{ path('enseignant_index') }}">Retour à la liste</a>
{% endblock %}