{% extends 'base.html.twig' %}

{% block title %}Historique des paiements{% endblock %}

{% block body %}
<h1>Historique des paiements pour {{ eleve.nom }} {{ eleve.prenom }}</h1>
    <table>
        <thead>
            <tr>
                <th>Date</th>
                <th>Montant</th>
                <th>Mode de paiement</th>
                <th>Status</th>
                <th>Commentaire</th>
            </tr>
        </thead>
        <tbody>
            {% for paiement in paiements %}
            <tr>
                <td>{{ paiement.createdAt|date('d/m/Y') }}</td>
                <td>{{ paiement.montant }}</td>
                <td>{{ paiement.modePaiement }}</td>
                <td>{{ paiement.status }}</td>
                <td>{{ paiement.commentaire }}</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
